                    <input asp-for="PostalCode" placeholder="Postal code" id="shipping-address__postal-code">
                    <span asp-validation-for="PostalCode" class="text text-danger"></span>
                </div>
                <div class="shipping-address__form-city">
                    <span class="placeholder-city"></span>
                    <input asp-for="City" placeholder="City" id="shipping-address__city">
                    <span asp-validation-for="City" class="text text-danger"></span>
                </div>
            </div>
