@model Order



<form type="post" asp-controller="order" asp-action="Checkout">
    <div class="checkout__information__main">
        <div class="checkout__information__login">
            <h2>Contact</h2>
            @*<span>Already have an account? <a href="./login.html">Log in</a></span>*@
        </div>
        <div class="checkout__information__email">
            <span>Email</span>
            <input asp-for="Email" required="required">
        </div>
        <div class="checkout__information__delivery-method">
            <h2>Delivery method</h2>
            <div class="checkout__information__ship delivery-radio">
                <input class="checkout__information__radio" name="delivery" checked="true" type="radio" id="information-ship"
                       onchange="radioChanged(this)">
                <span></span>
                <label for="information-ship">Ship</label>
            </div>
            <div class="checkout__information__pick-up delivery-radio">
                <input class="checkout__information__radio" name="delivery" type="radio" id="information-pick-up"
                       onchange="radioChanged(this)">
                <span></span>
                <label for="information-pick-up">Pick up</label>
            </div>
        </div>
