        <div class="pickup-locations">
            <h2>Pickup Locations</h2>
            <p>There is 1 store with stock close to your location</p>
            <div class="location">
                <div class="location__left">
                    <span>New York</span>
                    <p>New York, New York NY</p>
                </div>
                <div class="location__right">
                    <span>Free</span>
                    <p>Usually ready in 4 hours</p>
                </div>
            </div>
        </div>
        <div class="checkout__return">
            <a asp-controller="product" asp-action="cart">
                Return to cart
                <i class="fa-solid fa-chevron-left"></i>
            </a>
            <button type="submit">Continue to shipping</button>
        </div>
    </div>
</form>