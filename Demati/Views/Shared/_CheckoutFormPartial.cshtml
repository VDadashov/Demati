                <div class="shipping-address__fname">
                    <span class="placeholder-fname"></span>
                    <input asp-for="Name" placeholder="First name (optional)" id="shipping-address__fname">
                    <span asp-validation-for="Name" class="text text-danger"></span>
                </div>
                <div class="shipping-address__lname">
                    <span class="placeholder-lname"></span>
                    <input asp-for="Surname" placeholder="Last name" id="shipping-address__lname">
                    <span asp-validation-for="Surname" class="text text-danger"></span>
                </div>
            </div>
            <div class="shipping-address__form-address">
                <span class="placeholder-address"></span>
                <input asp-for="AddressLine" placeholder="Address" id="shipping-address__address">
                <span asp-validation-for="AddressLine" class="text text-danger"></span>
            </div>
            <div class="shipping-address__form-apartment">
                <span class="placeholder-apartment"></span>
                <input asp-for="Company" placeholder="Company" id="shipping-address__apartment">
                <span asp-validation-for="Company" class="text text-danger"></span>
            </div>
            <div class="shipping-address__form-apartment form-telephone">
                <span style="position: absolute;
    top: 5px;
    left: 14px;
    font: normal 300 12px/21px Roboto;
                      color: rgb(134, 134, 134);
                      display: none;
                      animation: fadeDown 0.25s ease-in-out;" class="placeholder-phone"></span>
