@model HomeVM

@{
    ViewData["Title"] = "Index";
    var count = 1;
    ViewBag.Count = 1;
}

<style>
    .product-card--wishlist:hover {
        background-color: #41CDE2 !important;
    }

    .product-card--wishlist:hover .wishlistIcon {
        color: white !important;
    }
    body{
        overflow-x:hidden;
    }
</style>

<section id="first-section">
    <div class="img-slider">
        @foreach (Slider item in Model.Sliders)
        {
            <div class="slide @(count == 1 ? " active" : "" )">
                <div class="slide-content">
                    <h2 class="slide-content__title">@Html.Raw(item.Title)</h2>
                    <span class="slide-content__subtitle">@item.SubTitle</span>
                    @Html.Raw(item.Link)
                </div>
                <img src="~/assets/images/Slider/@item.Image" alt="">
            </div>

            count++;
        }
        <div class="navigation">
            <div class="btn active"></div>
            <div class="btn"></div>
            <div class="btn"></div>
        </div>
    </div>
</section>

<section id="collection">
    <div class="left-collection">
        <div class="left-collection__one">
            <a class="left-collection__dress" asp-controller="shop" asp-action="index" asp-route-categoryId="7"><span class="left-collection--link">Dress</span></a>
        </div>
        <div class="left-collection__two">
            <a class="left-collection__accessories" asp-controller="shop" asp-action="index" asp-route-categoryId="14"><span class="left-collection--link">Accessories</span></a>
            <a class="left-collection__shose" asp-controller="shop" asp-action="index" asp-route-categoryId="3"><span class="left-collection--link">Shose</span></a>
        </div>
    </div>
    <div class="right-collection">
        <div class="right-collection__new-arrivals">
            <div class="right-collection__new-arrivals__content">
                <span class="right-collection__new-arrivals__subtitle">NEW ARRIVALS</span>
                <h3 class="right-collection__new-arrivals__title">Blondes <br> width minimalist</h3>
                <a id="new-arrivals--link" asp-controller="shop" asp-action="index" asp-route-categoryId="5" class="right-collection__new-arrivals--link">
                    Shop Collection
                    <span class="right-collection__new-arrivals--link--bar"></span>
                </a>
            </div>
        </div>
    </div>
</section>

