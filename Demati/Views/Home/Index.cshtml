                    <span class="categories-item__link--bar"></span>
                </a>
            </div>
            <div class="categories-item__image">
                <img class="categories-item--image" src="~/assets/images/Categories/cate-6.webp" alt="cate-6.webp">
            </div>
        </div>
    </div>
</section>

<section id="weekly-selection">
    <div class="container">
        <div id="weekly-selection-content">
            <h2>Weekly Selection</h2>
            <div class="tab-list">
                <ul class="tab-list__ul" type="none" role="tablist" aria-orientation="horizontal">
                    <li class="tab-list__li active-selected"><span>New arrivals</span></li>
                    <li class="tab-list__li"><span>Bets sellers</span></li>
                </ul>
                <div class="tab-list__content active-content">
                    <div class="product-card-content new-arrivals">
                        @await Html.PartialAsync("_ProductListPartial",Model.NewArrivals)
                    </div>
                </div>
                <div class="tab-list__content">
                    <div class="product-card-content bestsellers">
                        @await Html.PartialAsync("_ProductListPartial",Model.Bestseller)
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="banner-collection">
    <div class="container">
        <div class="banner-collection-content">
            <div class="weekend-collective">
                <a class="weekend-collective__link" href="#">
                    <img src="~/assets/images/Collection/banner5.webp" alt="">
                </a>
                <div class="weekend-collective__title">WEEKEND COLLECTIVE</div>
                <div class="weekend-collective__description">Big on logos</div>
            </div>
            <div class="new-topman">
                <a class="new-topman__link" href="#">
                    <img src="~/assets/images/Collection/banner6.webp" alt="">
                </a>
                <div class="new-topman__title">NEW TOPMAN</div>
                <div class="new-topman__description">Anti-cold classics</div>
            </div>
        </div>
    </div>
</section>

<section id="featured-products">
    <div class="container">
        <div class="featured-products-content">
            <h2>Featured Products</h2>
            <div class="featured-products-list">
                @await Html.PartialAsync("_ProductListPartial",Model.Featured)
            </div>
        </div>
    </div>
</section>

<section id="our-blog">
    <div class="container">
        <h2>Our blog</h2>
        <div class="blog-slider">
            @foreach (Blog blog in Model.Blogs)
            {
                <div style="width:483px;" class="blog-item slide-item">
                    <div class="blog-item__image">
                        <a href="./blog-detail.html" class="blog-item__image--link">
                            <img src="~/assets/images/Blog/@blog.Image" alt="@blog.Image">
                        </a>
                        <div style="place-content:center;display:grid;padding:0px;" class="blog-item__image--date">
                            <span>@blog.CreatedAt.ToString("MMM").ToUpper()-@blog.CreatedAt.Day</span>
                        </div>
                    </div>
                    <div class="blog-item__text">
                        <a href="./blog-detail.html" class="blog-item__title">@blog.Title</a>
                        <p class="blog-item__description">
                            @blog.Description.Substring(3, 92) ...
                        </p>
                        <a href="./blog-detail.html" class="blog-item--read-more">
                            Read more
                            <span class="blog-item--read-more--bar"></span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


