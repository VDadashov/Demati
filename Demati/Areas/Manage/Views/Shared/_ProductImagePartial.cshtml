@model IEnumerable<ProductImage>

<style>
    .deleteImageBtn{
        width:20px;
        height:20px;
        display:grid;
        place-content:center;
        color:red;
    }

    .fa-solid:hover {
        color:red;
        text-decoration: none;
    }

    .fa-solid{
        color: red;
        text-decoration: none;
    }
</style>

@if (Model != null)
{
        @foreach (ProductImage productImage in Model)
        {
                <div class="mr-5" style="position:relative;margin-bottom:24px">
                    <img style="width:100px" src="~/assets/images/Product/Detail/@productImage.Image">
                @if (Model.Count() > 1)
                {
                    <a 
                    asp-area="manage" 
                    asp-controller="product" 
                    asp-action="deleteImage" 
                    asp-route-id="@productImage.Id" 
                    asp-route-productId="@productImage.ProductId"
                    style="position:absolute;right:0px;top:0px;cursor:pointer;text-decoration:none;" class="deleteImageBtn">
                        <i style="font-size:16px;" class="fa-solid fa-xmark"></i>
                    </a>
                }
                </div>
        }
}
